---
import Contact from './contact.astro';
interface Props {
	icon_size?: string;
	name_size?: string;
	value_size?: string;
}

const {
	icon_size = '64px',
	name_size = 'text-xs lg:text-sm',
	value_size = 'text-md lg:text-lg',
} = Astro.props;
---

<div class="flex flex-col items-start">
	<Contact {icon_size} {name_size} {value_size}/>
</div>
