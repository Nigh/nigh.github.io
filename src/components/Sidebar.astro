---
const items = Array.from({ length: 5 }, (_, i) => i + 1);
---

<div class="flex flex-col gap-4">
  <div
    class="skeleton h-48 w-full flex items-center justify-center border-primary/20 border-1 rounded-xl"
  >
    <p class="text-center">No ads</p>
  </div>

  <div
    class="skeleton h-24 w-full flex items-center justify-center border-primary/20 border-1 rounded-xl"
  >
    <p class="text-center">No recommend</p>
  </div>

  <div class="flex flex-col p-4 gap-4 border-primary/20 border-1 rounded-xl">
    <p class="text-lg font-bold mb-4">People you may know</p>
    {
      items.map((item) => (
        <div class="flex items-center gap-4 w-full">
          <div class="skeleton h-16 w-16 shrink-0 rounded-full" />
          <div class="flex flex-col gap-4 w-full">
            <div class="skeleton h-4 w-1/2" />
            <div class="skeleton h-4 w-full" />
          </div>
        </div>
      ))
    }
  </div>
</div>
