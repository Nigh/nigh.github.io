---
const { href, svg } = Astro.props;
---

<a
  href={href}
  class="flex flex-col md:flex-row items-center md:gap-4 px-2 py-1 md:px-4 md:py-3 rounded-full hover:bg-primary/80 transition-colors font-bold bg-transparent"
>
  <svg viewBox="0 0 24 24" aria-hidden="true" class="h-6 w-6" fill="currentColor"
    ><g><path d={svg}></path></g></svg
  >
  <span class="text-lg"><slot /></span>
</a>
